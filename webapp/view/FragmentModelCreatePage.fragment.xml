<c:FragmentDefinition xmlns:f="sap.ui.layout.form" 
                      xmlns:layout="sap.ui.layout" 
                      xmlns:c="sap.ui.core" 
                      xmlns:table="sap.ui.table" 
                      xmlns="sap.m"
                      xmlns:u="sap.ui.unified">
    
    <Page title="Modell hinzufÃ¼gen" showHeader="true" showFooter="true">
        <content>
            <f:SimpleForm editable="true" backgroundDesign="Transparent">
                <Text text="Neues Modell erstellen" class="Header" />
            </f:SimpleForm>
            <layout:BlockLayout background="Default" visible="true">
                <layout:content>

                    <layout:BlockLayoutRow scrollable="false">
                        <layout:content>

                            <layout:BlockLayoutCell width="1">
                                <layout:content>
                                    <Label text="Modellname" required="true" />
                                    <Input id="in_modellname" value="{Modellname}" />
                                    <Label text="Image Url" required="true" class="ModelCreatePageLabel"/>
                                    <Input value="{Url}" />
                                    <Label text="Preis" class="ModelCreatePageLabel"/>
                                    <Input value="{Preis}" />
                                    <Label text="Farbe" class="ModelCreatePageLabel"/>
                                    <Input value="{Farbe}" />

                                   <Select id="colorSelect" width="auto" change="onSelectColor">
                                        <c:ListItem id="black" text="Schwarz" />
                                        <c:ListItem id="red" text="Rot" />
                                        <c:ListItem id="blue" text="Blau" />
                                    </Select>

                                    <Label text="Beschreibung" />

                                    <TextArea placeholder="Beschreibung..." maxLength="400" width="100%" />
                                    <layout:HorizontalLayout class="ModelCreatePageButton">
                                        <u:FileUploader
                                            id="fileUploader"
                                            name="myFileUpload"
                                            uploadUrl="upload/"
                                            tooltip="Upload your file to the local server"
                                            uploadComplete="handleUploadComplete"/>
                                        <Button
                                            text="Upload File"
                                            press="handleUploadPress"
                                            class="ModelCreatePageButtonUpload" />
                                    </layout:HorizontalLayout>
                                    <Button press="onPressModelCreate" text="Modell erstellen" icon="sap-icon://add-coursebook" class="ModelCreatePageButton"/>
                                </layout:content>
                            </layout:BlockLayoutCell>

                            <layout:BlockLayoutCell width="1">
                                <layout:VerticalLayout width="100%">
                                     <Table id="CreateTabTeileListe" items="{path: 'ToFahrradmodellEinzelteil'}">
                                        <columns>
                                            <Column width="12em">
                                                <Text text="Teil" />
                                            </Column>
                                            <Column width="12em">
                                                <Text text="Anzahl" />
                                            </Column>
                                        </columns>
                                        <items>
                                        <ColumnListItem>
                                            <cells>
                                                <ObjectIdentifier title="{ToEinzelteil/Einzelteilname}" />
                                                <StepInput width="auto" value="0" min="0" id="anzahl" step="1" change="onQuanChange" visible="true"/>
                                            </cells>
                                        </ColumnListItem>
                                        </items>
                                    </Table>
                                </layout:VerticalLayout>
                                
                            </layout:BlockLayoutCell>

                        </layout:content>
                    </layout:BlockLayoutRow>

                </layout:content>
            </layout:BlockLayout>
        </content>
   </Page> 
</c:FragmentDefinition>
