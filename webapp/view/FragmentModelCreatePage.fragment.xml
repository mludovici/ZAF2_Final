<c:FragmentDefinition xmlns:f="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:c="sap.ui.core" xmlns:table="sap.ui.table" xmlns="sap.m">
    <Page title="Modell hinzufügen" showHeader="true" showFooter="true">

            <layout:HorizontalLayout background="Default" visible="true">
                
                    <f:SimpleForm editable="true" backgroundDesign="Transparent">

                        <Text text="Neues Modell erstellen" class="Header" />

                    </f:SimpleForm>


                                <f:SimpleForm editable="true" backgroundDesign="Transparent">

                                    <Label text="Modellname" required="true" />

                                    <Input id="in_modellname" value="{Modellname}" />

                                    <Label text="Image Url" required="true" />

                                    <Input value="{Url}" />

                                    <Label text="Preis" />

                                    <Input value="{Preis}" />

                                    <Label text="Farbe" />

                                    <Input value="{Farbe}" />

                                    <!-- <Select id="createModelColors">                                                
                                    <core:Item text="Schwarz" key="black" />                                                
                                    <core:Item text="Rot" key="red" />                                                
                                    <core:Item text="Blau" key="blue" />                                            
                                    </Select> -->

                                    <Label text="Beschreibung" />

                                    <TextArea placeholder="Beschreibung..." maxLength="400" width="100%" />

                                </f:SimpleForm>

                                <HBox width="100%" justifyContent="End">

                                    <Button press="onPressModelCreate" text="Modell erstellen" icon="sap-icon://add-coursebook" />

                                </HBox>


                                <layout:VerticalLayout width="100%" id="createModelNeededParts">

                                    <Label text="Notwendige Teile" class="LabelCellTeile" />

                                </layout:VerticalLayout>

                                <Table id="CreateTabTeileListe" items="{path: '/ProductCollection' }">

                                    <columns>

                                        <Column width="12em">

                                            <Text text="Teil" />

                                        </Column>

                                        <Column width="12em">

                                            <Text text="Preis" />

                                        </Column>

                                    </columns>

                                    <items>

                                        <ColumnListItem>

                                            <cells>

                                                <ObjectIdentifier title="{Teil}" />

                                                <Text text="{Preis}" />

                                            </cells>

                                        </ColumnListItem>

                                    </items>

                                </Table>


