<c:FragmentDefinition xmlns:f="sap.ui.layout.form" 
                      xmlns:layout="sap.ui.layout" 
                      xmlns:c="sap.ui.core" 
                      xmlns:table="sap.ui.table" 
                      xmlns="sap.m"
                      xmlns:u="sap.ui.unified">
    
    <Page title="Modell hinzufÃ¼gen" showHeader="true" showFooter="true">
        <content>
            <f:SimpleForm editable="true" backgroundDesign="Transparent">
                <Text text="Neues Modell erstellen" class="Header" />
            </f:SimpleForm>
            <layout:BlockLayout background="Default" visible="true">
                <layout:content>

                    <layout:BlockLayoutRow scrollable="false">
                        <layout:content>

                            <layout:BlockLayoutCell width="1">
                                <layout:content>
                                    <Label text="Modellname" required="true" />
                                    <Input id="in_modellname" />
                                    <Label text="Bild URL" required="true" class="ModelCreatePageLabel"/>
                                    <Input id="in_url" />
                                    <Label text="Preis" class="ModelCreatePageLabel"/>
                                    <Input id="in_preis" />
                                    <Label text="Farbe" class="ModelCreatePageLabel"/>
                                    <Input id="in_farbe" />
                                    <Label text="Beschreibung" class="ModelCreatePageLabel"/>
                                    <TextArea id="in_beschreibung" placeholder="Beschreibung..." maxLength="400" width="100%" />
                                    <Button press="onPressModelCreate" type="Emphasized" text="Modell erstellen" icon="sap-icon://add-coursebook" class="ModelCreatePageButton"/>
                                </layout:content>
                            </layout:BlockLayoutCell>

                            <layout:BlockLayoutCell width="1">
                                <layout:VerticalLayout width="100%">
                                    <layout:VerticalLayout width="100%" id="layout1">
                                        <Label text="Teileliste" class="ModelDetailPageUeberschrTeile" />
                                    </layout:VerticalLayout>
                                     <Table id="CreateTabTeileListe" items="{/EinzelteilSet}">
                                        <columns>
                                            <Column width="12em">
                                                <Text text="Name" />
                                            </Column>
                                            <Column width="12em">
                                                <Text text="Anzahl" />
                                            </Column>
                                        </columns>
                                        <items>
                                        <ColumnListItem>
                                            <cells>
                                                <ObjectIdentifier title="{Einzelteilname}" />
                                                <StepInput width="auto" value="0" min="0" id="anzahl" step="1" change="onQuanChange" visible="true"/>
                                            </cells>
                                        </ColumnListItem>
                                        </items>
                                    </Table>
                                </layout:VerticalLayout>
                                
                            </layout:BlockLayoutCell>

                        </layout:content>
                    </layout:BlockLayoutRow>

                </layout:content>
            </layout:BlockLayout>
        </content>
   </Page> 
</c:FragmentDefinition>
