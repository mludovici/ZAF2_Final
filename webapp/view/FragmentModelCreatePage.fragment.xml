                                            class="TextCellBesch"
                                        />
                                    </layout:VerticalLayout>
                                </layout:content>
                            </layout:BlockLayoutCell>

                            <layout:BlockLayoutCell width="1">
                                <layout:VerticalLayout width="100%" id="layout1">
                                    <Label text="Teileliste" class="LabelCellTeile" />
                                </layout:VerticalLayout>
                                <Table id="TabTeileListe" items="{
                                                   path: '/ProductCollection'
                                                }">
                                    <columns>
                                        <Column width="12em">
                                            <Text text="Teil" />
                                        </Column>
                                        <Column width="12em">
                                            <Text text="Preis" />
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <ObjectIdentifier title="{Teil}" />
                                                <Text text="{Preis}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </layout:BlockLayoutCell>
                        </layout:content>
                    </layout:BlockLayoutRow>
                </layout:content>
            </layout:BlockLayout>
        </content>
    </Page>
</c:FragmentDefinition>
