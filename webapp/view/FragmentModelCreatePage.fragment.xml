<c:FragmentDefinition xmlns:f="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:c="sap.ui.core" xmlns:table="sap.ui.table" xmlns="sap.m">
    <Page title="Modell hinzufügen" id="det2" showHeader="true" showFooter="true">

            <layout:BlockLayout background="Default" visible="true">
                <layout:content>
                    <f:SimpleForm editable="true" backgroundDesign="Transparent">

                        <Text text="Neues Modell erstellen" class="Header" />

                    </f:SimpleForm>

                    <layout:BlockLayout background="Default" visible="true">

                        <!-- <layout:content> -->

                        <layout:BlockLayoutRow scrollable="false">

                            <!-- <layout:content> -->

                            <layout:BlockLayoutCell title="Modell-Spezifikation">
                                   <layout:content>
                                <f:SimpleForm editable="true" backgroundDesign="Transparent">

                                    <Label text="Modellname" required="true" />

                                    <Input value="{Modellname}" />

                                    <Label text="Image Url" required="true" />

                                    <Input value="{Url}" />

                                    <Label text="Preis" />

                                    <Input value="{Preis}" />

                                    <Label text="Farbe" />

                                    <Input value="{Farbe}" />

                                    <!-- <Select id="createModelColors">                                                
                                    <core:Item text="Schwarz" key="black" />                                                
                                    <core:Item text="Rot" key="red" />                                                
                                    <core:Item text="Blau" key="blue" />                                            
                                    </Select> -->

                                    <Label text="Beschreibung" />

                                    <TextArea placeholder="Beschreibung..." maxLength="400" width="100%" />

                                </f:SimpleForm>

                                <HBox width="100%" justifyContent="End">

                                    <Button text="Modell erstellen" icon="sap-icon://add-coursebook" />

                                </HBox>
  </layout:content>
                            </layout:BlockLayoutCell>

                            <layout:BlockLayoutCell width="1">

                                <layout:VerticalLayout width="100%" id="createModelNeededParts">

                                    <Label text="Notwendige Teile" class="LabelCellTeile" />

                                </layout:VerticalLayout>

                                <Table id="CreateTabTeileListe" items="{path: '/ProductCollection' }">

                                    <columns>

                                        <Column width="12em">

                                            <Text text="Teil" />

                                        </Column>

                                        <Column width="12em">

                                            <Text text="Preis" />

                                        </Column>

                                    </columns>

                                    <items>

                                        <ColumnListItem>

                                            <cells>

                                                <ObjectIdentifier title="{Teil}" />

                                                <Text text="{Preis}" />

                                            </cells>

                                        </ColumnListItem>

                                    </items>

                                </Table>

                            </layout:BlockLayoutCell>

                            <!-- </layout:content> -->

                        </layout:BlockLayoutRow>

                        <!-- <layout:BlockLayoutRow>                                    
                        <layout:BlockLayoutCell width="1">                                        
                        <HBox width="100%" justifyContent="End">                                            
                        <Button text="Modell erstellen" icon="sap-icon://add-coursebook" />                                        
                        </HBox>                                    
                        </layout:BlockLayoutCell>                                
                        </layout:BlockLayoutRow> -->

                        <!-- </layout:content> -->

                    </layout:BlockLayout>
                </layout:content>
            </layout:BlockLayout>

   </Page> 
</c:FragmentDefinition>
