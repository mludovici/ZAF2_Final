<c:FragmentDefinition
    xmlns:f="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:c="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml">
 
    <Page title="Lagerverwaltung"  id="det1" showHeader="true" showFooter="true">
        <content>
            <layout:BlockLayout background="Default" visible="true">
                <layout:content>

                    <layout:BlockLayoutRow scrollable="false">
                        <layout:content>

                            <layout:BlockLayoutCell width="1">
                                    <layout:VerticalLayout width="100%">
                                    <Label text="Ãœbersichte Lagerorte und Verkaufsstellen" class="ModelDetailPageUeberschrTeile"/>
                                </layout:VerticalLayout>
                                <Table id="TabUebersicht"
                                        items="{
                                            path: '/FahrradmodellOrtBestandSet'}">
                                    <headerToolbar>
                                        <Toolbar height="auto" enabled="true" visible="true" width="auto" design="Solid">
                                            <content>
                                                <Select autoAdjustWidth="false" id="filterLager" width="200px" change="onFilterLager" >
                                                    <c:ListItem id="leer" text="" />
                                                    <c:ListItem id="typ" text="Typ" />
                                                    <c:ListItem id="ort" text="Ort" />
                                                    <c:ListItem id="modell" text="Modell" />
                                                </Select>
                                                <Button width="10px" icon="sap-icon://sort-ascending" press="onLagerSortAsc" />
                                                <Button width="10px" icon="sap-icon://sort-descending" press="onLagerSortDesc" />
                                                <Button press="onLagerClearFilter" icon="sap-icon://clear-filter"/>
                                            </content>
                                        </Toolbar>
                                    </headerToolbar>
                                    <columns>
                                        <Column width="5em">
                                            <Text text="Typ" />
                                        </Column>
                                        <Column width="12em">
                                            <Text text="Ort" />
                                        </Column>
                                        <Column width="12em">
                                            <Text text="Modell" />
                                        </Column>
                                        <Column width="12em">
                                            <Text text="Bestand" />
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <Text text="{Typ}" />
                                                <Text text="{Ort}" />
                                                <Text text="{Modell}" />
                                                <Text text="{Bestand}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </layout:BlockLayoutCell>

                            
                        </layout:content>
                    </layout:BlockLayoutRow>

                </layout:content>
            </layout:BlockLayout>
        </content>
    </Page>
</c:FragmentDefinition>